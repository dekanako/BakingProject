<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.bakingproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".di.ApplicationModule"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.DetailedSteps.DetailedStepsActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.hosting.HostingActivity" />

        <activity
            android:name=".ui.hosting.HostingActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.dishList.DishListActivity" />

        <activity
            android:name=".ui.dishList.DishListActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".widget.IngredientsWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/ingredints_widget_info" />
        </receiver>

        <service android:name=".widget.ListRemoteViewService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

    </application>

</manifest>