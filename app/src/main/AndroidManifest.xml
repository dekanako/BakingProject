<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.bakingproject">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:name=".di.ApplicationModule"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:launchMode="singleTop" android:parentActivityName=".ui.hosting.HostingActivity" android:name=".ui.DetailedSteps.DetailedStepsActivity"></activity>

        <activity android:launchMode="singleTop" android:parentActivityName=".ui.dishList.DishListActivity" android:name=".ui.hosting.HostingActivity" />

        <activity android:launchMode="singleTop" android:name=".ui.dishList.DishListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity  >
    </application>


</manifest>